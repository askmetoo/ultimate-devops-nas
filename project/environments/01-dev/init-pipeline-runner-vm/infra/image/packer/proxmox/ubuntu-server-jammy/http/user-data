# cloud-init configuration

autoinstall:
  version: 1
  locale: en_US
  keyboard:
    layout: de
  ssh:
    install-server: true
    allow-pw: false
    disable_root: true
    ssh_quiet_keygen: true
    allow_public_ssh_keys: true
  packages:
    - qemu-guest-agent
    - sudo
  storage:
    layout:
      name: direct
    swap:
      size: 0
  user-data:
    package_upgrade: false
    timezone: America/New York
    users:
      - name: your-user-name
        shell: /bin/bash
        sudo: ALL=(ALL) NOPASSWD:ALL
        lock-passwd: false
        groups: [adm, sudo]
        ssh_authorized_keys:
          - your-ssh-key
        #  OR
        # passwd: your-password
        